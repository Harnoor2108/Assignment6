<div class="row">
 <div class="col-md-12">
 <h2>Employees
    <a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a>
 </h2>
 <hr />
 <div class="table-responsive">
 <table class="table">
 <thead>
<tr>
    <td>Employees Num</td>
    <td>Full Name</td>
    <td>Email</td>
    <td>Address</td>
    <td>Manager ID</td>
    <td>Status</td>
    <td>Department</td>
    <td>Hire on</td>
</tr>
</thead>
<tbody>
{{#each employees}}

    <tr>
        <td>{{employeeNum}}</td>
        <td><a href="/employee/{{employeeNum}}">{{firstName}} {{lastName}}</a></td>
        <td><a href="mailto:{{email}}">{{email}}</a></td>
        <td>{{addressStreet}} , {{addressState}} , {{addressPostal}}</td>
        <td><a href="/employees?manager={{employeeManagerNum}}">{{employeeManagerNum}}</a></td>
        <td><a href="/employees?status={{status}}">{{status}}</a></td>
        <td><a href="/employees?department={{depaartment}}">{{department}}</a></td>
        <td>{{hireDate}}</td>
        <td><a href="/employee/delete/{{this.empNum}}" class="btn btn-danger">remove</a></td>
          {{else}}
        <div class="col-md-12 text-center">
 <strong>{{message}}</strong>
    </tr>
{{/each}}
 </tbody>
</table>
</div>

 </div>
</div>